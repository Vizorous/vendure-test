{
	"compilerOptions": {
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"target": "es2019",
		"strict": true,
		"sourceMap": false,
		"skipLibCheck": true,
		"outDir": "./dist",
		"baseUrl": "./"
	},
	"exclude": [
		"node_modules",
		"migration.ts",
		"src/data-import",
		"src/mock-data",
		"src/populate.ts"
	],
	"ts-node": {
		"files": true
	}
}
